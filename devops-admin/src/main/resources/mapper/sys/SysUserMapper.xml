<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.leoch.modules.sys.mapper.SysUserMapper">

	<select id="getList" resultType="net.leoch.modules.sys.entity.SysUserEntity">
		select t1.* from sys_user t1
		where t1.super_admin = 0
		<if test="username != null and username.trim() != ''">
			and t1.username like #{username}
		</if>
		<if test="gender != null and gender.trim() != ''">
			and t1.gender = #{gender}
		</if>
	</select>

	<select id="getById" resultType="net.leoch.modules.sys.entity.SysUserEntity">
		select t1.* from sys_user t1
			where t1.id = #{value}
	</select>

	<select id="getByUsername" resultType="net.leoch.modules.sys.entity.SysUserEntity">
		select * from sys_user where username = #{value}
	</select>

	<update id="updatePassword">
		update sys_user set password = #{newPassword} where id = #{id}
	</update>

</mapper>
